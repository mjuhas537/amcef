{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "noImplicitAny": true,
      "strictNullChecks": true,
      "allowUnusedLabels":false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true
   },
    "include": [
        "src/**/*.ts",
        "app.ts"]      
}